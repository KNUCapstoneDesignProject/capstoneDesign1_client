            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="회원가입"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/puppy"></ImageView>
